
@{
    ViewBag.Title = "errorResult";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="computer_main">
    <div class="error-container">
        <h1>Oops! Something went wrong.</h1>
        <p>@ViewBag.Message</p>
    </div>
    <a href="#" onclick="history.back(); return false;" class="back-button">Return</a>
</div>

<style>
    .error-container {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    h1 {
        font-size: 36px;
        font-weight: bold;
        color: #007bff;
        margin-bottom: 24px;
    }

    p {
        font-size: 18px;
        color: #333;
        text-align: center;
        max-width: 600px;
    }

    .back-button {
        padding: 8px 16px;
        font-size: 16px;
        text-decoration: none;
        color: #fff;
        background-color: #007bff;
        border-radius: 4px;
    }
</style>

