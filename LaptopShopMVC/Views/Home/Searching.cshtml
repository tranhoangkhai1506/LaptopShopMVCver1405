
@{
    ViewBag.Title = "Searching";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<body>
    @{ 
        LaptopShopMVC.Models.LaptopDBContext db = new LaptopShopMVC.Models.LaptopDBContext();
        var listBrand = db.THUONGHIEUx.ToList();
    }

    <form action="~/Home/SearchingResults" method="post">
        <div class="container mt-5">
            <div class="row">
                <div class="col-md-3 mb-4">
                    <h4 class="mb-3">Filter by Laptop Name</h4>
                    <div class="form-group">
                        <input name = "nameLaptop" type="text" class="form-control" placeholder="Enter Laptop Name">
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <h4 class="mb-3">Filter by Brand Name</h4>
                    <div class="form-group">
                        <div class="form-group">
                            <select name="nameBrand" class="form-control">
                                <option>Select Brand</option>
                                @{
                                    foreach (var i in listBrand)
                                    {
                                        <option>@i.TENTHUONGHIEU</option>
                                    }
                                }
                            </select>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <h4 class="mb-3">Filter by Price</h4>
                    <div class="form-group">
                        <input name = "minPrice" type="number" class="form-control" placeholder="Enter Minimum Price">
                    </div>
                    <div class="form-group">
                        <input name = "maxPrice" type="number" class="form-control" placeholder="Enter Maximum Price">
                    </div>
                </div>
                <div class="col-md-3 mb-4">
                    <h4 class="mb-3">Filter by RAM Value</h4>
                    <div class="form-group">
                        <select name = "ramValue" class="form-control">
                            <option>Select RAM Value</option>
                            <option>4</option>
                            <option>8</option>
                            <option>16</option>
                            <option>32</option>
                        </select>
                    </div>
                </div>
                <div class="col-md-12 text-center">
                    <button class="btn btn-primary">Search</button>
                </div>
            </div>
        </div>
    </form>
    

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
</body>
</html>


