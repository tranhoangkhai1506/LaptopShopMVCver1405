<style>
    #back-to-top {
        display: none;
        position: fixed;
        bottom: 20px;
        right: 250px;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background-color: #333;
        color: #fff;
        text-align: center;
        line-height: 40px;
        font-size: 16px;
        opacity: 0.7;
        cursor: pointer;
        transition: opacity 0.3s, background-color 0.3s;
    }

        #back-to-top:hover {
            opacity: 1;
            background-color: #555;
        }


    .navbar {
        display: flex;
