@model LaptopShopMVC.Models.KHACHHANG

@{
    ViewBag.Title = "Nhapkhachhang";
    Layout = "~/Views/Shared/_empty.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <section class="h-100 gradient-form" style="background-color: #eee;">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-xl-10">
                    <div class="card rounded-3 text-black">
                        <div class="row g-0">
                            <div class="col-lg-6">
                                <div class="card-body p-md-5 mx-md-4">

                                    <div class="text-center">
                                        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/lotus.webp"
                                             style="width: 185px;" alt="logo">
                                        <h4 class="mt-1 mb-5 pb-1">We are The Lotus Team</h4>
                                    </div>

                                    <form>
                                        <h5>Please fill your informations</h5>

                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                        <div class="form-group">
                                            <p>Tên khách hàng</p>
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.TENKHACHHANG, new { htmlAttributes = new { @class = "form-control", required = "required"} })
                                                @Html.ValidationMessageFor(model => model.TENKHACHHANG, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <p>Email</p>
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.EMAIL, new { htmlAttributes = new { @class = "form-control" , required = "required" } })
                                                @Html.ValidationMessageFor(model => model.EMAIL, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <p>CCCD</p>
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.CCCD, new { htmlAttributes = new { @class = "form-control" , required = "required" } })
                                                @Html.ValidationMessageFor(model => model.CCCD, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <p>Ngày tháng năm sinh</p>
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.NGAYSINH, new { htmlAttributes = new { @class = "form-control" , required = "required" } })
                                                @Html.ValidationMessageFor(model => model.NGAYSINH, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <p>Địa chỉ</p>
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.DIACHI, new { htmlAttributes = new { @class = "form-control" , required = "required" } })
                                                @Html.ValidationMessageFor(model => model.DIACHI, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="form-group">
                                            <p>Số điện thoại</p>
                                            <div class="col-md-10">
                                                @Html.EditorFor(model => model.SDT, new { htmlAttributes = new { @class = "form-control" , required = "required" } })
                                                @Html.ValidationMessageFor(model => model.SDT, "", new { @class = "text-danger" })
                                            </div>
                                        </div>

                                        <div class="text-center pt-1 mb-5 pb-1">
                                            <input type="submit" value="Tiếp tục" class="btn btn-primary btn-block fa-lg gradient-custom-2 mb-3" />
                                        </div>
                                    </form>
                                    <div class="text-center pt-1 mb-5 pb-1">
                                        <h4 style="color: black">New to Frica? <a style="color: blue" href="@Url.Action("Nhapkhachhang", "Account")">Create</a></h4>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6 d-flex align-items-center gradient-custom-2">
                                <div class="text-white px-3 py-4 p-md-5 mx-md-4">
                                    <h4 class="mb-4">We are more than just a company</h4>
                                    <p class="small mb-0">
                                        Thanks for using our services!
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}
<style>
    .gradient-custom-2 {
        background: #fccb90;
        background: -webkit-linear-gradient(to right, #ee7724, #d8363a, #dd3675, #b44593);
        background: linear-gradient(to right, #ee7724, #d8363a, #dd3675, #b44593);
    }
</style>
