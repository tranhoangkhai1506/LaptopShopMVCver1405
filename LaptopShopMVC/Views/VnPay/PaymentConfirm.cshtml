
@{
    ViewBag.Title = "PaymentConfirm";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    string message = @ViewBag.Message;
}

<style>
    .back-button {
        padding: 8px 16px;
        font-size: 16px;
        text-decoration: none;
        color: #fff;
        background-color: #007bff;
        border-radius: 4px;
    }
</style>

@{
    if (message.Contains("Thanh toán thành công hóa đơn"))
    {
        <div class="computer_main">
            <div class="error-container">
                <h1>Payment Successful</h1>
                <p>Thank you for your payment. Your transaction has been processed successfully.</p>
            </div>
            <a href="@Url.Action("Index", "Home")" class="back-button">Go to Home</a>
        </div>
    }
}

@{
    if (message.Contains("Có lỗi xảy ra trong quá trình xử lý"))
    {
        <head>
            <title>Error Payment</title>
        </head>
        <body>
            <div class="computer_main">
                <h1>Payment Error</h1>
                <p>We apologize, but there was an error processing your payment.</p>
                <p>@ViewBag.MaGiaoDich</p>
                <p>@ViewBag.MaLoi</p>
                <p>Please try again later or contact customer support for assistance.</p>
            </div>
        </body>
    }
}