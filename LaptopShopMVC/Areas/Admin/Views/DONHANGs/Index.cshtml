@model IEnumerable<LaptopShopMVC.Models.DONHANG>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

<h2 style="text-align:center">Đơn Hàng</h2>


<button class="btn btn-secondary" style="margin: 0 auto; width: 130px">
    @Html.ActionLink("Create New", "Create", null, new { style = "color: white;" })
</button>
<br />

<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        DANH SÁCH ĐƠN HÀNG
    </div>
    <div class="card-body">
        <table id="datatablesSimple">
            <thead>
                <tr>
                    <th>Mã đơn hàng</th>
                    <th>Tên khách hàng</th>
                    <th>Email</th>
                    <th>Địa chỉ</th>
                    <th>Ngày thanh toán</th>
                    <th>Tổng tiền</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Mã đơn hàng</th>
                    <th>Tên khách hàng</th>
                    <th>Email</th>
                    <th>Ngày thanh toán</th>
                    <th>Tổng tiền</th>
                    <th>Tác vụ</th>
                </tr>
            </tfoot>
            <tbody>
                @{

                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.MADONHANG</td>
                            <td>@item.KHACHHANG.TENKHACHHANG</td>
                            <td>@item.KHACHHANG.EMAIL</td>
                            <td>@item.NGAYTHANHTOAN</td>
                            <td>@item.TONGTIEN</td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.MADONHANG }) |
                                @Html.ActionLink("Details", "Details", new { id = item.MADONHANG }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.MADONHANG })
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
