@model IEnumerable<LaptopShopMVC.Models.DONHANG>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

<h2 style="text-align:center">Đơn Hàng</h2>


<button class="btn btn-secondary" style="margin: 0 auto; width: 130px">
    @Html.ActionLink("Create New", "Create", null, new { style = "color: white;" })
</button>
<br />
<table class="table" style="text-align:center">
    <thead class="table-info">
        <tr>
            <th>
                Mã Đơn Hàng
            </th>
            <th>
                Tên Khách Hàng
            </th>
            <th>
                Tên Nhân Viên
            </th>
            <th>
                Tổng Tiền
            </th>
            <th>
                Ngày Thanh Toán
            </th>
            <th>
                Chức Năng
            </th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MADONHANG)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KHACHHANG.TENKHACHHANG)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NHANVIEN.TENNHANVIEN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TONGTIEN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NGAYTHANHTOAN)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MADONHANG }) |
                @Html.ActionLink("Details", "Details", new { id = item.MADONHANG }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MADONHANG })
            </td>
        </tr>
    }

</table>

<style>
    .table {
        width: 95%;
        margin: 0 auto;
    }

        .table tr:hover {
            background-color: #f5f5f5;
        }

    table {
        width: 100%;
    }

    td, th {
        border: 1px solid black;
    }
</style>