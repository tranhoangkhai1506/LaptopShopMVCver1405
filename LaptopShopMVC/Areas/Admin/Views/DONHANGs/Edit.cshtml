@model LaptopShopMVC.Models.DONHANG

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

<br />
<h2 style="text-align:center">Chỉnh Sửa Đơn Hàng</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal" style="text-align:center">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.MADONHANG)

        <div class="form-group">
            @Html.LabelFor(model => model.TONGTIEN, htmlAttributes: new { @class = "control-label col-md-2" })
            <div style="width: 50%; display: inline-block; text-align: left;">
                @Html.EditorFor(model => model.TONGTIEN, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TONGTIEN, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NGAYTHANHTOAN, htmlAttributes: new { @class = "control-label col-md-2" })
            <div style="width: 50%; display: inline-block; text-align: left;">
                @Html.EditorFor(model => model.NGAYTHANHTOAN, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NGAYTHANHTOAN, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MANHANVIEN, "MANHANVIEN", htmlAttributes: new { @class = "control-label col-md-2" })
            <div style="width: 50%; display: inline-block; text-align: left;">
                @Html.DropDownList("MANHANVIEN", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MANHANVIEN, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MAKHACHHANG, "MAKHACHHANG", htmlAttributes: new { @class = "control-label col-md-2" })
            <div style="width: 50%; display: inline-block; text-align: left;">
                @Html.DropDownList("MAKHACHHANG", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.MAKHACHHANG, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-12">
                <input type="submit" value="Save" class="btn btn-success" />
                <div class="btn btn-info">
                    @Html.ActionLink("Back", "Index", null, new { style = "color: white;" })
                </div>
            </div>
        </div>
    </div>
}
<style>
    .form-group {
        margin: 10px;
    }
</style>