@model LaptopShopMVC.Models.DANHMUC

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

<div style="text-align:center">
    <h2>Thêm Danh Mục Sản Phẩm</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                Tên Danh Mục :
                <div class="col-md-4">
                    @Html.EditorFor(model => model.TENDANHMUC, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                    @Html.ValidationMessageFor(model => model.TENDANHMUC, "", new { @class = "text-danger" })
                </div>
            </div>
            <br />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-12 ">
                    <input type="submit" value="Create" class="btn btn-success" /> |
                    <div class="btn btn-info">
                        @Html.ActionLink("Back", "Index", null, new { style = "color: white;" })
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .form-group{
        display: flex;
        align-items: center;
        justify-content: center;
    }
</style>