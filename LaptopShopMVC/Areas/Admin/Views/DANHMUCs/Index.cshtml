@model IEnumerable<LaptopShopMVC.Models.DANHMUC>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

<h2 style="text-align:center">Danh Mục Sản Phẩm</h2>

<button id="btncreate" class="btn btn-secondary">
    @Html.ActionLink("Create New", "Create",null, new { style = "color: white;"})
</button>
<br />
<table class="table" style="text-align:center">
    <thead class="table-info">
        <tr>
            <th>
                Mã Danh Mục
            </th>
            <th>
                Tên Danh Mục
            </th>
            <th>
                Chức Năng
            </th>
        </tr>
    </thead>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MADANHMUC)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TENDANHMUC)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MADANHMUC }) |
                @Html.ActionLink("Details", "Details", new { id = item.MADANHMUC }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MADANHMUC })
            </td>
        </tr>
    }

</table>

<style>
    table {
        width: 100%;
    }

    #btncreate{
        margin: 0 auto;
        width: 130px;
    }
    
    td, th{
        border: 1px solid black;
    }

    .table {
        width: 95%;
        margin: 0 auto;
    }

        .table tr:hover {
            background-color: #f5f5f5;
        }
</style>
