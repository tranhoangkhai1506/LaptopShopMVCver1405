@model LaptopShopMVC.Models.DANHMUC

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

<h2>Xóa Danh Mục Sản Phẩm</h2>
<h3>Bạn có chắc chắn muốn xóa danh mục này?</h3>

<div class="danhmuc">
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Mã Danh Mục :@Html.DisplayFor(model => model.MADANHMUC)
        </dt>

        <dt>
            Tên Danh Mục : @Html.DisplayFor(model => model.TENDANHMUC)
        </dt>


    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <div class="btn btn-info">
                @Html.ActionLink("Back", "Index", null, new { style = "color: white;"} )
            </div>
        </div>
    }
</div>

<style>
    h2, h3{
        text-align:center;
    }

    .danhmuc{
        text-align:center;
    }
</style>
