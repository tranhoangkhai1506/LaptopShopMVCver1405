@model IEnumerable<LaptopShopMVC.Models.THUONGHIEU>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

<h2 style="text-align:center">Thương Hiệu</h2>

<button class="btn btn-secondary" style="margin: 0 auto; width: 130px">
    @Html.ActionLink("Create New", "Create", null, new { style = "color: white;" })
</button>
<br />
<table class="table" style="text-align:center">
    <thead class="table-info">
        <tr>
            <th>
                Mã Thương Hiệu
            </th>
            <th>
                Tên Thương Hiệu
            </th>
            <th>
                Xuất Xứ
            </th>
            <th>
                Chức Năng
            </th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MATHUONGHIEU)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TENTHUONGHIEU)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.XUATXU)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MATHUONGHIEU }) |
                @Html.ActionLink("Details", "Details", new { id = item.MATHUONGHIEU }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MATHUONGHIEU })
            </td>
        </tr>
    }

</table>

<style>
    table {
        width: 100%;
    }

    td, th {
        border: 1px solid black;
    }

    .table {
        width: 95%;
        margin: 0 auto;
    }

        .table tr:hover {
            background-color: #f5f5f5;
        }
</style>