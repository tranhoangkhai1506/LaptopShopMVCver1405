@model IEnumerable<LaptopShopMVC.Models.THUONGHIEU>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

<h2 style="text-align:center">Thương Hiệu</h2>

<button class="btn btn-secondary" style="margin: 0 auto; width: 130px">
    @Html.ActionLink("Create New", "Create", null, new { style = "color: white;" })
</button>
<br />

<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        DANH SÁCH THƯƠNG HIỆU
    </div>
    <div class="card-body">
        <table id="datatablesSimple">
            <thead>
                <tr>
                    <th>Mã thương hiệu</th>
                    <th>Tên thương hiệu</th>
                    <th>Xuất xứ</th>
                    <th>Tác vụ</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Mã thương hiệu</th>
                    <th>Tên thương hiệu</th>
                    <th>Xuất xứ</th>
                    <th>Tác vụ</th>
                </tr>
            </tfoot>
            <tbody>
                @{

                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.MATHUONGHIEU</td>
                            <td>@item.TENTHUONGHIEU</td>
                            <td>@item.XUATXU</td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.MATHUONGHIEU }) |
                                @Html.ActionLink("Details", "Details", new { id = item.MATHUONGHIEU }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.MATHUONGHIEU })
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>