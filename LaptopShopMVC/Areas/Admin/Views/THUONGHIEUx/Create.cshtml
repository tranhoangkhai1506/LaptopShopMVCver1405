@model LaptopShopMVC.Models.THUONGHIEU

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

<h2 style="text-align:center">Thêm Thương Hiệu</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal" style="text-align:center">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            Tên Thương Hiệu
            <br />
            <div style="width: 50%; display: inline-block; text-align: left;">
                @Html.EditorFor(model => model.TENTHUONGHIEU, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TENTHUONGHIEU, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            Xuất Xứ
            <br />
            <div style="width: 50%; display: inline-block; text-align: left;">
                @Html.EditorFor(model => model.XUATXU, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.XUATXU, "", new { @class = "text-danger" })
            </div>
        </div>

        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-12 ">
                <input type="submit" value="Create" class="btn btn-success" /> |
                <div class="btn btn-info">
                    @Html.ActionLink("Back", "Index", null, new { style = "color: white;" })
                </div>
            </div>
        </div>
    </div>
}
