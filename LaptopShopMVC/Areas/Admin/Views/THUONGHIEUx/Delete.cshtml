@model LaptopShopMVC.Models.THUONGHIEU

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

<div style="text-align:center">
    <h2>Xóa Thương Hiệu</h2>
    <h3>Bạn có chắc chắn muốn xóa thương hiệu này?</h3>


    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                Mã Thương Hiệu : @Html.DisplayFor(model => model.MATHUONGHIEU)
            </dt>
            <dt>
                Tên Thương Hiệu : @Html.DisplayFor(model => model.TENTHUONGHIEU)
            </dt>

            <dt>
                Xuất Xứ : @Html.DisplayFor(model => model.XUATXU)
            </dt>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <div class="btn btn-info">
                    @Html.ActionLink("Back", "Index", null, new { style = "color: white;" })
                </div>
            </div>
        }
    </div>
</div>