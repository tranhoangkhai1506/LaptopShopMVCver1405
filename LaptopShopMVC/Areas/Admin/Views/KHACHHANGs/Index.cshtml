@model IEnumerable<LaptopShopMVC.Models.KHACHHANG>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

<h2 style="text-align:center">Khách Hàng</h2>

<button class="btn btn-secondary" style="margin: 0 auto; width: 130px">
    @Html.ActionLink("Create New", "Create", null, new { style = "color: white;" })
</button>
<br />
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        DANH SÁCH KHÁCH HÀNG
    </div>
    <div class="card-body">
        <table id="datatablesSimple">
            <thead>
                <tr>
                    <th>Mã khách hàng</th>
                    <th>Tên khách hàng</th>
                    <th>Email</th>
                    <th>căn cước công dân</th>
                    <th>Ngày Sinh</th>
                    <th>Địa chỉ</th>
                    <th>Số điện thoại</th>
                    <th>Tác vụ</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Mã khách hàng</th>
                    <th>Tên khách hàng</th>
                    <th>Email</th>
                    <th>Căn cước công dân</th>
                    <th>Ngày Sinh</th>
                    <th>Địa chỉ</th>
                    <th>Số điện thoại</th>
                    <th>Tác vụ</th>
                </tr>
            </tfoot>
            <tbody>
                @{

                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.MAKHACHHANG</td>
                            <td>@item.TENKHACHHANG</td>
                            <td>@item.EMAIL</td>
                            <td>@item.CCCD</td>
                            <td>@item.NGAYSINH</td>
                            <td>@item.DIACHI</td>
                            <td>@item.SDT</td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.MAKHACHHANG }) |
                                @Html.ActionLink("Details", "Details", new { id = item.MAKHACHHANG }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.MAKHACHHANG })
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>