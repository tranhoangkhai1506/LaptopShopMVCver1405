@model LaptopShopMVC.Models.KHACHHANG

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

<div style="text-align:center">
    <h2>Xóa Khách Hàng</h2>
    <h3>Bạn có chắc chắn muốn xóa khách hàng này?</h3>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Khách Hàng: @Html.DisplayFor(model => model.TENKHACHHANG)
        </dt>

        <dt>
            Email: @Html.DisplayFor(model => model.EMAIL)
        </dt>

        <dt>
            Căn Cước Công Dân: @Html.DisplayFor(model => model.CCCD)
        </dt>

        <dt>
            Ngày Sinh: @Html.DisplayFor(model => model.NGAYSINH)
        </dt>

        <dt>
            Địa Chỉ: @Html.DisplayFor(model => model.DIACHI)
        </dt>

        <dt>
            Số Điện Thoại: @Html.DisplayFor(model => model.SDT)
        </dt>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <div class="btn btn-info">
                @Html.ActionLink("Back", "Index", null, new { style = "color: white;" })
            </div>
        </div>
    }
</div>
