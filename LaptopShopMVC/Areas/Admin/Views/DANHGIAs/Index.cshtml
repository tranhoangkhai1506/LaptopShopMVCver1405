@model IEnumerable<LaptopShopMVC.Models.DANHGIA>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

<h2 style="text-align:center">Đánh Giá</h2>

<button class="btn btn-secondary" style="margin: 0 auto; width: 130px">
    @Html.ActionLink("Create New", "Create", null, new { style = "color: white;" })
</button>
<br />
<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-table me-1"></i>
        DANH SÁCH ĐÁNH GIÁ
    </div>
    <div class="card-body">
        <table id="datatablesSimple">
            <thead>
                <tr>
                    <th>Mã khách hàng</th>
                    <th>Tên khách hàng</th>
                    <th>Tên Sản Phẩm</th>
                    <th>Nội Dung</th>
                    <th>Tác vụ</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>Mã khách hàng</th>
                    <th>Tên khách hàng</th>
                    <th>Tên Sản Phẩm</th>
                    <th>Nội Dung</th>
                    <th>Tác vụ</th>
                </tr>
            </tfoot>
            <tbody>
                @{

                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.MADANHGIA</td>
                            <td>@item.KHACHHANG.TENKHACHHANG</td>
                            <td>@item.SANPHAM.TENSANPHAM</td>
                            <td>@item.NOIDUNG</td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.MADANHGIA }) |
                                @Html.ActionLink("Details", "Details", new { id = item.MADANHGIA }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.MADANHGIA })
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>