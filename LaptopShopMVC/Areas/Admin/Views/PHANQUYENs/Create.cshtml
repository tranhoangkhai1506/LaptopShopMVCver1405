                @Html.EditorFor(model => model.QUYENHAN, new { htmlAttributes = new { @class = "form-control", @required = "required" } })
                @Html.ValidationMessageFor(model => model.QUYENHAN, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-12 ">
                <input type="submit" value="Create" class="btn btn-success" /> |
                <div class="btn btn-info">
                    @Html.ActionLink("Back", "Index", null, new { style = "color: white;" })
                </div>
            </div>
