@model IEnumerable<LaptopShopMVC.Models.PHANQUYEN>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

<h2 style="text-align:center">Phân Quyền</h2>

<button class="btn btn-secondary" style="margin: 0 auto; width: 130px">
    @Html.ActionLink("Create New", "Create", null, new { style = "color: white;" })
</button>
<br />
<table class="table" style="text-align:center">
    <thead class="table-info">
        <tr>
            <th>
                Mã Phân Quyền
            </th>
            <th>
                Tên Phân Quyền
            </th>
            <th>
                Quyền Hạn
            </th>
            <th>
                Chức Năng
            </th>
        </tr>
    </thead>
    

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MAPHANQUYEN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TENPHANQUYEN)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.QUYENHAN)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.MAPHANQUYEN }) |
                @Html.ActionLink("Details", "Details", new { id = item.MAPHANQUYEN }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MAPHANQUYEN })
            </td>
        </tr>
    }

</table>
<style>
    .table {
        width: 95%;
        margin: 0 auto;
    }

        .table tr:hover {
            background-color: #f5f5f5;
        }

    table {
        width: 100%;
    }

    td, th {
        border: 1px solid black;
    }
</style>