@model LaptopShopMVC.Models.PHIEUNHAPHANG

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_layout.cshtml";
}

<div style="text-align:center">
    <h2>Xóa Phiếu Nhập Hàng</h2>
    <h3>Bạn có chắc chắn muốn xóa phiếu nhập hàng này?</h3>
    <hr />
    <dl class="dl-horizontal">


        <dd>
            Tên Nhân Viên: @Html.DisplayFor(model => model.NHANVIEN.TENNHANVIEN)
        </dd>


        <dd>
            Ngày Nhập Hàng: @Html.DisplayFor(model => model.NGAYNHAPHANG)
        </dd>


        <dd>
            Tổng Tiền: @Html.DisplayFor(model => model.TONGTIEN)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <div class="btn btn-info">
                @Html.ActionLink("Back", "Index", null, new { style = "color: white;" })
            </div>
        </div>
    }
</div>
